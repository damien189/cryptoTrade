
model Message {
  id        String   @id @default(uuid())
  userId    String
  subject   String
  content   String
  status    String   @default("unread") // unread, read
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("messages")
}
